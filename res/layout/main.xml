<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_shape"
            android:id="@+id/editExpression"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="none"
            android:editable="false"
            android:textSize="30sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_gravity="top"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="6"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false" android:layout_alignWithParentIfMissing="false"
                android:layout_margin="3dp" android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true">

        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/clear"
                android:layout_row="1" android:layout_column="0" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/left_bracket"

                android:baselineAlignBottom="false" android:layout_row="1" android:layout_column="1"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/right_bracket"
                android:layout_row="1" android:layout_column="2" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>

        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/divide"
                android:layout_row="1" android:layout_column="3" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/delete"
                android:layout_row="1" android:layout_column="4" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num7" android:layout_row="2" android:layout_column="0"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num8" android:layout_row="2" android:layout_column="1"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:src="@drawable/num9" android:layout_row="2" android:layout_column="2"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/mult" android:layout_row="2" android:layout_column="3"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/sin"

                android:baselineAlignBottom="false" android:layout_row="2" android:layout_column="4"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num4"
                android:layout_row="3" android:layout_column="0" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num5" android:layout_row="3" android:layout_column="1"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num6" android:layout_row="3" android:layout_column="2"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/minus"
                android:layout_row="3" android:layout_column="3" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/cos"

                android:baselineAlignBottom="false" android:layout_row="3" android:layout_column="4"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="4" android:layout_column="0"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num2" android:layout_row="4" android:layout_column="1"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4" android:layout_column="2" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/plus" android:layout_row="4" android:layout_column="3"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/tg"

                android:baselineAlignBottom="false" android:layout_row="4" android:layout_column="4"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="5" android:layout_column="0"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/point"
                android:layout_row="5" android:layout_column="1" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/sqrt"
                android:layout_row="5" android:layout_column="2" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/equal" android:layout_row="5" android:layout_column="3"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton

                android:background="@android:color/transparent"
                android:src="@drawable/ctg"

                android:baselineAlignBottom="false" android:layout_row="5" android:layout_column="4"
                android:layout_margin="2dp"/>

    </GridLayout>

</RelativeLayout>


