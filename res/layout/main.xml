<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
                android:background="@drawable/black_and_white"
        >
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_shape"
            android:id="@+id/editExpression"
            android:cursorVisible="true"
            android:hint="@string/editExpressionHint"
            android:gravity="center"
            android:textCursorDrawable="@color/cursorColor"
            android:focusableInTouchMode="true"
            android:textSize="25sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_gravity="top"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="6"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false" android:layout_alignWithParentIfMissing="false"
                android:layout_margin="3dp" android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true" android:alignmentMode="alignBounds"
                android:background="@android:color/transparent">

        <ImageButton
                android:id="@+id/imButtonClear"
                android:onClick="onClickClear"
                android:background="@android:color/transparent"
                android:src="@drawable/clear"
                android:layout_row="1" android:layout_column="0" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonLBracket"
                android:onClick="onClickLBracket"
                android:background="@android:color/transparent"
                android:src="@drawable/left_bracket"

                android:baselineAlignBottom="false" android:layout_row="1" android:layout_column="1"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonRBracket"
                android:onClick="onClickRBracket"
                android:background="@android:color/transparent"
                android:src="@drawable/right_bracket"
                android:layout_row="1" android:layout_column="2" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>

        <ImageButton
                android:id="@+id/imButtonDivide"
                android:onClick="onClickDivide"
                android:background="@android:color/transparent"
                android:src="@drawable/divide"
                android:layout_row="1" android:layout_column="3" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonDelete"
                android:onClick="onClickDelete"
                android:background="@android:color/transparent"
                android:src="@drawable/delete"
                android:layout_row="1" android:layout_column="4" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN7"
                android:onClick="onClickN7"
                android:background="@android:color/transparent"
                android:src="@drawable/num7" android:layout_row="2" android:layout_column="0"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN8"
                android:onClick="onClickN8"
                android:background="@android:color/transparent"
                android:src="@drawable/num8" android:layout_row="2" android:layout_column="1"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN9"
                android:onClick="onClickN9"
                android:background="@android:color/transparent"
                android:src="@drawable/num9" android:layout_row="2" android:layout_column="2"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonMultiple"
                android:onClick="onClickMultiple"
                android:background="@android:color/transparent"
                android:src="@drawable/multiple" android:layout_row="2" android:layout_column="3"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonSin"
                android:onClick="onClickSin"
                android:background="@android:color/transparent"
                android:src="@drawable/sin"

                android:baselineAlignBottom="false" android:layout_row="2" android:layout_column="4"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN4"
                android:onClick="onClickN4"
                android:background="@android:color/transparent"
                android:src="@drawable/num4"
                android:layout_row="3" android:layout_column="0" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN5"
                android:onClick="onClickN5"
                android:background="@android:color/transparent"
                android:src="@drawable/num5" android:layout_row="3" android:layout_column="1"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN6"
                android:onClick="onClickN6"
                android:background="@android:color/transparent"
                android:src="@drawable/num6" android:layout_row="3" android:layout_column="2"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonMinus"
                android:onClick="onClickMinus"
                android:background="@android:color/transparent"
                android:src="@drawable/minus"
                android:layout_row="3" android:layout_column="3" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonCos"
                android:onClick="onClickCos"
                android:background="@android:color/transparent"
                android:src="@drawable/cos"

                android:baselineAlignBottom="false" android:layout_row="3" android:layout_column="4"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN1"
                android:onClick="onClickN1"
                android:background="@android:color/transparent"
                android:src="@drawable/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="4" android:layout_column="0"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN2"
                android:onClick="onClickN2"
                android:background="@android:color/transparent"
                android:src="@drawable/num2" android:layout_row="4" android:layout_column="1"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN3"
                android:onClick="onClickN3"
                android:background="@android:color/transparent"
                android:src="@drawable/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4" android:layout_column="2" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonPlus"
                android:onClick="onClickPlus"
                android:background="@android:color/transparent"
                android:src="@drawable/plus" android:layout_row="4" android:layout_column="3"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonTg"
                android:onClick="onClickTg"
                android:background="@android:color/transparent"
                android:src="@drawable/tg"

                android:baselineAlignBottom="false" android:layout_row="4" android:layout_column="4"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonN0"
                android:onClick="onClickN0"
                android:background="@android:color/transparent"
                android:src="@drawable/num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_row="5" android:layout_column="0"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonPoint"
                android:onClick="onClickPoint"
                android:background="@android:color/transparent"
                android:src="@drawable/point"
                android:layout_row="5" android:layout_column="1" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonSqrt"
                android:onClick="onClickSqrt"
                android:background="@android:color/transparent"
                android:src="@drawable/sqrt"
                android:layout_row="5" android:layout_column="2" android:baselineAlignBottom="false"
                android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonEqual"
                android:onClick="onClickEqual"
                android:background="@android:color/transparent"
                android:src="@drawable/equal" android:layout_row="5" android:layout_column="3"
                android:baselineAlignBottom="false" android:layout_margin="2dp"/>
        <ImageButton
                android:id="@+id/imButtonPower"
                android:onClick="onClickPower"
                android:background="@android:color/transparent"
                android:src="@drawable/power"
                android:baselineAlignBottom="false" android:layout_row="5" android:layout_column="4"
                android:layout_margin="2dp"/>

    </GridLayout>

</RelativeLayout>


